<% flash.each do |type, msg| %>
    <div class="alert alert-success" role="notice">
      <%= msg %>
    </div>
  <% end %>
  <h1>Page Home</h1>
  
  <p>Bienvenue sur notre page !! <br>T'as vu comment nos potins ont la classe ?</p>
  
  <% Gossip.all.each do |gossip| %>  
    <div class="card w-50">
    <div class="card-body">
      <h5 class="card-title">Potin n° <%= gossip.id %><br/></h5>
      <p class="card-text">Son auteur :  <%= gossip.user.name %><br/></p>
      <p class="card-text">Son titre :  <%= gossip.title %><br/><br/></p>
      <a href="/gossips/<%= gossip.id %>" class="btn btn-primary">Viens voir ce Gossip de plus près !</a>
    </div>
  </div>
  <% end %> 

  
  <p>Voilà, <a href="/home/">bisou</a> !</p>